<div class="row">
  <div class="col-md-6 offset-md-6">
    <% @tweets.each do |tweet| %>
      <div class="card mx-auto" style="width: 34rem; padding: 10px;">
        <div class="card-title">
          <%= gravatar_image_tag(tweet.user.email, size: 64) %>
          <%= tweet.user.name %>
          <br>
          <%= tweet.tweet %>
          <br>
        </div>
        <% if current_user == tweet.user %>
          <nav class="links">
            <%= link_to tweet, class: "links" do %>
            <span class="icon">
              <i class="fa fa-link" aria-hidden="true"></i>
            </span>
          <% end %>
          <%= link_to edit_tweet_path(tweet), class: "links" do %>
          <span class="icon">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </span>
        <% end %>
        <%= link_to tweet, method: :delete, data: { confirm: "Do you really want to delete this tweet?" } do %>
        <span class="icon">
          <i class="fa fa-trash-o" aria-hidden="true"></i>
        </span>
      <% end %>
    </nav>
  <% else %>
  <% end %>
</div>
<% end %>
</div>
</div>
